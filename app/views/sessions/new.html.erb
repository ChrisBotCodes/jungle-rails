<h1>Login</h1>

<%= form_tag '/login' do %>
  <div style="display: block">
    <label style="margin: 5px; width: 100px">Email:</label>
    <%= text_field_tag :email %>
  </div>
  <div style="display: block">
    <label style="margin: 5px; width: 100px">Password:</label>
    <%= password_field_tag :password %>
  </div>

  <label style="margin: 5px;"><%= submit_tag "Submit" %></label>

<% end %>